{
  "name": "node-switchbot",
  "type": "module",
  "version": "3.0.0",
  "description": "The node-switchbot is a Node.js module which allows you to control your Switchbot Devices through Bluetooth (BLE).",
  "author": "OpenWonderLabs (https://github.com/OpenWonderLabs)",
  "license": "MIT",
  "homepage": "https://github.com/OpenWonderLabs/node-switchbot",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenWonderLabs/node-switchbot.git"
  },
  "bugs": {
    "url": "https://github.com/OpenWonderLabs/node-switchbot/issues"
  },
  "keywords": [
    "switchbot",
    "bot",
    "meter",
    "temperature",
    "humidity",
    "curtain",
    "blind",
    "BLE",
    "Bluetooth Low Energy",
    "Bluetooth smart",
    "Bluetooth"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "^20 || ^22"
  },
  "scripts": {
    "check": "npm install && npm outdated",
    "update": "ncu -u && npm update && npm install",
    "lint": "eslint src/**/*.ts",
    "fix": "eslint src/**/*.ts --fix",
    "watch": "npm run build && npm link && nodemon",
    "build": "npm run clean && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "postpublish": "npm run clean",
    "clean": "shx rm -rf ./dist",
    "test": "vitest run",
    "test-coverage": "npm run test -- --coverage",
    "docs": "typedoc",
    "lint-docs": "typedoc --emit none --treatWarningsAsErrors"
  },
  "readmeFilename": "README.md",
  "dependencies": {
    "@stoprocent/noble": "^1.15.1",
    "async-mutex": "^0.5.0",
    "undici": "^6.19.8"
  },
  "optionalDependencies": {
    "@stoprocent/bluetooth-hci-socket": "^1.4.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.7.3",
    "@types/aes-js": "^3.1.4",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.13",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.7.4",
    "@types/semver": "^7.5.8",
    "@types/sinon": "^17.0.3",
    "@types/source-map-support": "^0.5.10",
    "@vitest/coverage-v8": "^2.1.2",
    "eslint": "^9.11.1",
    "eslint-plugin-format": "^0.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm-check-updates": "^17.1.3",
    "shx": "^0.3.4",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.7",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
