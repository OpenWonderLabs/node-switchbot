{
  "version": "2.3.0",
  "name": "node-switchbot",
  "description": "The node-switchbot is a Node.js module which allows you to control your Switchbot Devices through Bluetooth (BLE).",
  "homepage": "https://github.com/OpenWonderLabs/node-switchbot",
  "author": "OpenWonderLabs (https://github.com/OpenWonderLabs)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenWonderLabs/node-switchbot.git"
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "check": "npm install && npm outdated",
    "update": "ncu -u && npm update && npm install",
    "lint": "eslint src/**/*.ts",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "postpublish": "npm run clean",
    "clean": "rimraf ./dist",
    "test": "npm run lint",
    "docs": "typedoc",
    "lint-docs": "typedoc --emit none --treatWarningsAsErrors"
  },
  "keywords": [
    "switchbot",
    "bot",
    "meter",
    "temperature",
    "humidity",
    "curtain",
    "blind",
    "BLE",
    "Bluetooth Low Energy",
    "Bluetooth smart",
    "Bluetooth"
  ],
  "readmeFilename": "README.md",
  "dependencies": {
    "@stoprocent/noble": "^1.14.1"
  },
  "optionalDependencies": {
    "@stoprocent/bluetooth-hci-socket": "^1.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.11",
    "eslint": "^9.7.0",
    "globals": "^15.8.0",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^16.14.20",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.5",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.44"
  }
}
